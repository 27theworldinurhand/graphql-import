{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run AVA test serially",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": ["${file}", "--serial"],
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 5858
    }
  ]
}
